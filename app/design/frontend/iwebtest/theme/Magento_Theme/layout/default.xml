<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Change the store logo to the iWeb logo, set the width to 200px -->
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo-with-text.svg</argument>
                <argument name="logo_img_width" xsi:type="number">200</argument>
            </arguments>
        </referenceBlock>

        <!-- Add a new CMS block to the footer positioned before all others -->
        <referenceContainer name="footer">

            <!-- Demonstrate use of arguments to configure a block -->
            <container name="iweb.footer.wrapper" htmlClass="iweb-wrapper" htmlTag="div" before="-">
                <block class="Magento\Cms\Block\Block" name="iweb_footer_item" before="-">
                    <arguments>
                        <argument name="block_id" xsi:type="string">iweb_footer_item</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>

        <!--Hide default welcome message-->
        <referenceBlock name="top.links">
            <referenceBlock name="header" remove="true"/>
        </referenceBlock>
    </body>
</page>
